# EditorConfig - Consistent coding styles across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 4
shell_variant = bash

[*.bash]
indent_size = 4
shell_variant = bash

# Makefiles require tabs
[Makefile]
indent_style = tab

[*.mk]
indent_style = tab

# YAML files
[*.{yaml,yml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false

# JSON
[*.json]
indent_size = 2

# Containerfile/Dockerfile
[{Containerfile,Dockerfile}]
indent_size = 4
